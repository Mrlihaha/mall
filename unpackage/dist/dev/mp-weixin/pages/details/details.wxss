.details .GoodsNav {
  width: 750rpx;
  position: fixed;
  bottom: 0;
  z-index: 10;
}
.details swiper {
  height: 750rpx;
  width: 750rpx;
}
.details swiper image {
  width: 100%;
  height: 100%;
}
.details .price {
  color: #aff;
  font-size: 36rpx;
}
.details .price text {
  color: #dd524d;
}
.details .price text:nth-child(2) {
  margin-left: 17rpx;
  color: #999;
  text-decoration: line-through;
}
.details .name {
  font-size: 32rpx;
  line-height: 38rpx;
  padding-top: 10rpx;
  padding-bottom: 15rpx;
  font-weight: 800;
  padding: 50rpx;
}
.details .text {
  background: #c8c7cc;
}
.details .text .huohao {
  margin-top: 20rpx;
  background: #fff;
  text-indent: 1em;
}
.details .text .kucun {
  background: #fff;
  text-indent: 1em;
}
.details .imgDetails {
  display: block;
}
.details .imgDetails image {
  display: block;
  width: 100%;
}
.details .imgDetails image:nth-child(1) {
  height: 320rpx;
}
.details .imgDetails image:nth-child(2) {
  height: 1200rpx;
}
.details .imgDetails image:nth-child(3) {
  height: 1200rpx;
}
.details .gengduo {
  text-align: center;
  line-height: 50rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  font-size: 35rpx;
}

